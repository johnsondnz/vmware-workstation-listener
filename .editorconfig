root = true

[*]
max_line_length = 119
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

# Python
[*.py]
max_line_length = 119
indent_style = space
indent_size = 4

[*.{j2,jinja2}]
indent_size = 3

[*.{yml,yaml}]
indent_size = 2

[.editorconfig]
insert_final_newline = true

# Makefiles
[Makefile]
indent_style = tab